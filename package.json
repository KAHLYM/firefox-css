{
  "name": "firefox-css",
  "displayName": "firefox-css",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "firefox-css.launch",
        "title": "Launch Firefox"
      }
    ],
    "configuration": {
      "title": "Firefox CSS",
      "properties": {
        "firefoxCSS.targetPlatform": {
          "type": "string",
          "enum": [
            "Linux",
            "macOS",
            "Windows",
            "All"
          ],
          "default": "All",
          "description": "Used to show/hide platform-specific snippets."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "coverage": "npm run pretest && node ./out/test/runTest.js --coverage"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "glob": "^11.0.0",
    "mocha": "^10.7.3",
    "nyc": "^17.1.0",
    "typescript": "^5.6.2"
  }
}